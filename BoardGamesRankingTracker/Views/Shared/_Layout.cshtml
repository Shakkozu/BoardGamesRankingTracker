@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - moja aplikacja platformy ASP.NET</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-dark navbar-expand-lg bg-dark fixed-top">
        <div class="container">
            @Html.ActionLink("Board Games Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="justify-content-around">
                <button type="button" class="navbar-toggler justify-content-end" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Informacje", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Szukaj", "Search", "Player", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Statystyki", "Index", "Player", routeValues: 1, htmlAttributes: new { title = "Manage", @class = "nav-link" })
                        </li>
                    }
                    <div class="d-lg-none">
                        @Html.Partial("_LoginPartial")
                    </div>
                </ul>


            </div>
            <div class="d-none d-lg-block">
                @Html.Partial("_LoginPartial")
            </div>


        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moja aplikacja ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
